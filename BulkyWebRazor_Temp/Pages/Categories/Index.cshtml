@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Create New Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var data in Model.CategoryList)
            {
                <tr>
                    <td>@data.Name</td>
                    <td>
                        @data.DisplayOrder
                    </td>

                    <td style="width:150px">
                        <div class="btn-group">
                            <a asp-page="/categories/edit" class="btn btn-success mx-2" asp-route-id="@data.Id"><i class="bi bi-pencil-square"></i></a>
                            <a asp-page="/categories/delete" class="btn btn-danger" asp-route-id="@data.Id"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>