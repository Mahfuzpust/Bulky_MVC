@model IEnumerable<BulkyWeb.Models.Category>


<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2>Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="Category" class="btn btn-info"><i class="bi bi-plus-circle"></i>&nbsp;Create New Category</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var data in Model)
        {
            <tr>
                <td>@data.Name</td>
                <td>@data.DisplayOrder</td>
                <td>
                    <partial name="_ButtonPartial" model="@data.Id" />
                </td>
            </tr>
        }
    </tbody>
</table>

