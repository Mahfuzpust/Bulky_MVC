@model Bulky.Models.Company

<form asp-action="Delete" method="post">
    <div class="border p-3 mt-4">

        <div class="row pb-3">
            <h2 class="">Category</h2>
            <hr />
        </div>
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly"></div>

         <div class="row mb-3 p-1">
                    <label asp-for="Name" class="p-0 mb-2"></label>
                    <input asp-for="Name" class="form-control" />
                </div>

                <div class="row mb-3 p-1">
                    <label asp-for="StreetAddress" class="p-0 mb-2"></label>
                    <textarea asp-for="StreetAddress" class="form-control"></textarea>
                </div>

                <div class="row mb-3 p-1">
                    <label asp-for="City" class="p-0 mb-2"></label>
                    <input asp-for="City" class="form-control" />
                </div>

                <div class="row mb-3 p-1">
                    <label asp-for="State" class="p-0 mb-2"></label>
                    <input asp-for="State" class="form-control" />
                </div>

                <div class="row mb-3 p-1">
                    <label asp-for="PostalCode" class="p-0 mb-2"></label>
                    <input asp-for="PostalCode" class="form-control" />
                </div>

                <div class="row mb-3 p-1">
                    <label asp-for="PhoneNumber" class="p-0 mb-2"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>

        <div class="form-group ">
            <button class="btn btn-danger" type="submit" style="width:150px">Delete</button>
            <a asp-action="Index" asp-controller="Category" class="btn btn-secondary" style="width:150px">Back To List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


