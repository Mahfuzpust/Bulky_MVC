@model Bulky.Models.ViewModels.ProductVM

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <input asp-for="Product.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class=""> @(Model.Product.Id!=0?"Update":"Create") Product</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>

        <div class="row mb-3 p-1">
            <label asp-for="Product.Title" class="p-0 mb-2"></label>
            <input asp-for="Product.Title" class="form-control" />
            <span asp-validation-for="Product.Title" class="text-danger"></span>
        </div>

        <div class="row mb-3 p-1">
            <label asp-for="Product.Description" class="p-0 mb-2"></label>
            <textarea asp-for="Product.Description" class="form-control"></textarea>
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>

         <div class="row mb-3 p-1">
            <label asp-for="Product.Author" class="p-0 mb-2"></label>
            <input asp-for="Product.Author" class="form-control" />
            <span asp-validation-for="Product.Author" class="text-danger"></span>
        </div>

        <div class="row mb-3 p-1">
            <label asp-for="Product.ISBN" class="p-0 mb-2"></label>
            <input asp-for="Product.ISBN" class="form-control" />
            <span asp-validation-for="Product.ISBN" class="text-danger"></span>
        </div>

         <div class="row mb-3 p-1">
            <label asp-for="Product.ListPrice" class="p-0 mb-2"></label>
            <input asp-for="Product.ListPrice" class="form-control" />
            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
        </div>

        <div class="row mb-3 p-1">
            <label asp-for="Product.Price" class="p-0 mb-2"></label>
            <input asp-for="Product.Price" class="form-control" />
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>

        <div class="row mb-3 p-1">
            <label asp-for="Product.Price50" class="p-0 mb-2"></label>
            <input asp-for="Product.Price50" class="form-control" />
            <span asp-validation-for="Product.Price50" class="text-danger"></span>
        </div>

        <div class="row mb-3 p-1">
            <label asp-for="Product.Price100" class="p-0 mb-2"></label>
            <input asp-for="Product.Price100" class="form-control" />
            <span asp-validation-for="Product.Price100" class="text-danger"></span>
        </div>

        <div class="row mb-3 p-1">
            <label asp-for="Product.CategoryId" class="p-0 mb-2"></label>
            <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class=" p-2 ">
                <option disabled selected>--Select Category--</option>
            </select>
            @* <input asp-for="Product.CategoryId" class="form-control" />*@
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
        </div>

         <div class="row mb-3 p-1">
            <label asp-for="Product.ImageUrl" class="p-0 mb-2"></label>
            <input type="file" asp-for="Product.ImageUrl" class="form-control" />
        </div>

        <div class="form-group ">
            @if(Model.Product.Id != 0)
            {
                <button class="btn btn-success" type="submit" style="width:150px">Update</button>
            }
            else
            {
                <button class="btn btn-success" type="submit" style="width:150px">Create</button>
            }
            <a asp-action="Index" asp-controller="Product" class="btn btn-secondary" style="width:150px">Back To List</a>
        </div>

    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}