@model Bulky.Models.Product

<form asp-action="Edit" method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class=""> Edit Product</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>

        <div class="row mb-3 p-1">
            <label asp-for="Title" class="p-0 mb-2"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="row mb-3 p-1">
            <label asp-for="Description" class="p-0 mb-2"></label>
            <textarea asp-for="Description" class="form-control" ></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="row mb-3 p-1">
            <label asp-for="Author" class="p-0 mb-2"></label>
            <input asp-for="Author" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class="row mb-3 p-1">
            <label asp-for="ISBN" class="p-0 mb-2"></label>
            <input asp-for="ISBN" class="form-control" />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>

        <div class="row mb-3 p-1">
            <label asp-for="ListPrice" class="p-0 mb-2"></label>
            <input asp-for="ListPrice" class="form-control" />
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>

        <div class="row mb-3 p-1">
            <label asp-for="Price" class="p-0 mb-2"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="row mb-3 p-1">
            <label asp-for="Price50" class="p-0 mb-2"></label>
            <input asp-for="Price50" class="form-control" />
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>

        <div class="row mb-3 p-1">
            <label asp-for="Price100" class="p-0 mb-2"></label>
            <input asp-for="Price100" class="form-control" />
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>

        <div class="form-group ">
            <button class="btn btn-success" type="submit" style="width:150px">Update</button>
            <a asp-action="Index" asp-controller="Product" class="btn btn-secondary" style="width:150px">Back To List</a>
        </div>

    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}