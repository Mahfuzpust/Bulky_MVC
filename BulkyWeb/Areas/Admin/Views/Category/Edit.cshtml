@model Bulky.Models.Category

<form asp-action="Edit" method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class=""> Create Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>

        <div class="row mb-3 p-1">
            <label asp-for="Name" class="p-0 mb-2"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="row mb-3 p-1">
            <label asp-for="DisplayOrder" class="p-0 mb-2"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <div class="form-group ">
            <button class="btn btn-success" type="submit" style="width:150px">Update</button>
            <a asp-action="Index" asp-controller="Category" class="btn btn-secondary" style="width:150px">Back To List</a>
        </div>

    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}