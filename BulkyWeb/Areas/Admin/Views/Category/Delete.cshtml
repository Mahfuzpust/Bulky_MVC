@model Bulky.Models.Category

<form asp-action="Delete" method="post">
    <div class="border p-3 mt-4">

        <div class="row pb-3">
            <h2 class="">Category</h2>
            <hr />
        </div>
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly"></div>

        <div class="row mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" readonly="readonly" class="form-control" />
        </div>

        <div class="row mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" readonly="readonly" class="form-control" />
        </div>

        <div class="form-group ">
            <button class="btn btn-danger" type="submit" style="width:150px">Delete</button>
            <a asp-action="Index" asp-controller="Category" class="btn btn-secondary" style="width:150px">Back To List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
