@model IEnumerable<Product>


<div class="row pb=3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card p-1 mt-4 border-0 border-top border-2 rounded">
                        <img src="@product.ImageUrl" class="card-img-top rounded" height="300px" width="200px"/>
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-black opacity-75 text-uppercase text-center">@product.Title</p>
                                <p class="card-title text-info text-center"> by @product.Author</p>
                            </div>
                            <div class="pl-1">
                                <p class="text-black opacity-75 text-center mb-0">List Price: ৳ <span class="text-decoration-line-through">@product.ListPrice</span></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-black opacity-75 text-center"> As low as: ৳ <span>@product.Price100</span></p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" asp-controller="Home" asp-route-productId="@product.Id" class="btn btn-dark bg-gradient border-0 form-control">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>